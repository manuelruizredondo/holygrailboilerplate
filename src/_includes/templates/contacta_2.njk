<div class="front-section ptr-120 pbr-120">
    <section class="container-5">
        <div class="row text-center">
            <div class="col-xs-12  mb-32 ">
                <div class="fluid-5-b mb-24 ">
                    {{global.banner_title}}
                </div>
                <div class="fluid-9-r mb-24">
                    {{global.banner_text}}
                </div>
            </div>
        </div>
        <div class="row   md:reverse">
            <div class="col-xs-12  pt-16">
                <form name="contactformulario" method="POST" action="/confirmacion.html" data-netlify="true">
                    <div class="row mb-32">
                        <div class="col-xs-12 col-sm-6 mb-16 ">
                            <div class="form-input-label-2">
                                <input id="nombre" type="text" placeholder="Nombre" class="input" name="nombre">
                                <label for='nombre'>Nombre</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 mb-16 ">
                            <div class="form-input-label-2">
                                <input id="email" type="text" placeholder="Email" class="input" name="email" required
                                    pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
                                <label for='email'>email</label>
                            </div>
                        </div>
                    </div>
                    <div class="wmax-450">
                        <div class="row">
                            <div class="col-xs-12">
                                <button aria-label="enviar email" class="btn btn-primary btn--full" type="submit">
                                    {{global.banner_button}}</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>